@using NETMeetApp.Models
@model IEnumerable<AppUser>

<div class="container">
    <button type="button" class="btn btn-success mb-3">
        <a class="text-black text-decoration-none" asp-area="SuperAdmin" asp-controller="DashBoard" asp-action="Create">Create</a>
    </button>

    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Student Table</h4>
                    <p class="card-description">Add class <code>.table-striped</code></p>
                    <div class="table-responsive">
                        <table id="order-listing" class="table order-listing table-striped">
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Country</th>
                                    <th>Age</th>
                                    <th>Biography</th>
                                    <th>Profile Image</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Admin in Model)
                                {
                                    <tr>
                                        <td>@Admin.FullName</td>
                                        <td>@Admin.Email</td>
                                        <td>@Admin.Country</td>
                                       
                                        <td>@Admin.Age</td>
                                        <td>@Admin.ShortBioGraphy</td>
                                        <td>
                                            <img src="~/admin/images/@Admin.imageUrl" alt="Profile Image" class="img-thumbnail" />
                                        </td>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@Admin.Id" class="btn btn-info" style="padding:10px">Details</a>
                                            <a asp-action="Update" asp-route-id="@Admin.Id" class="btn btn-primary" style="padding:10px">Update</a>
                                            <a asp-action="Delete" asp-route-id="@Admin.Id" class="btn btn-danger" style="padding:10px">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
