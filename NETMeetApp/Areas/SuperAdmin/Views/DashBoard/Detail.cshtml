@model NETMeetApp.Models.AppUser

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h2 class="card-title">@Model.FullName</h2>
                        <p class="card-subtitle text-muted">@Model.UserType</p>
                    </div>
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="Profile Image" class="img-fluid rounded-circle mb-3 profile-img">
                        </div>
                        <div class="col-md-8">
                            <div class="row mb-4">
                                <div class="col-md-6 mb-3">
                                    <div class="info-box">
                                        <p class="font-weight-bold text-primary">Country</p>
                                        <p class="text-muted">@Model.Country</p>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-box">
                                        <p class="font-weight-bold text-primary">E-mail</p>
                                        <p class="text-muted">@Model.Email</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col-md-6 mb-3">
                                    <div class="info-box">
                                        <p class="font-weight-bold text-primary">Grade</p>
                                        <p class="text-muted">@Model.Grade</p>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="info-box">
                                        <p class="font-weight-bold text-primary">Age</p>
                                        <p class="text-muted">@Model.Age</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4">
                        <h4 class="font-weight-bold text-primary">Biography</h4>
                        <p class="text-muted">@Model.BioGraphy</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 1200px;
    }

    .card {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-body {
        padding: 2rem;
    }

    .card-title {
        font-size: 2.5rem;
        color: #343a40;
        margin-bottom: 0.5rem;
    }

    .card-subtitle {
        font-size: 1.2rem;
        color: #6c757d;
    }

    .profile-img {
        width: 100%;
        max-width: 300px;
        height: auto;
        border: 5px solid #e3e3e3;
    }

    .info-box {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }

    .font-weight-bold {
        font-size: 1.1rem;
        color: #495057;
    }

    .text-muted {
        font-size: 1rem;
        color: #6c757d;
    }

    .btn-success {
        font-size: 1.1rem;
        padding: 0.5rem 1rem;
        border-radius: 10px;
    }

        .btn-success:hover {
            background-color: #218838;
        }
</style>
